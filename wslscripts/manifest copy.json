{
    "manifest_version": 3,
    "name": "Browser Launcher Pro",
    "description": "Launch and manage multiple browser versions with ease. Features include version tracking, WSL integration, and quick search across multiple engines.",
    "version": "1.0",
    "author": "Browser Launcher Team",
    "homepage_url": "https://browserlauncher.pro",
    "permissions": 
    [
        "contextMenus",
        "nativeMessaging",
        "activeTab",
        "scripting",
        "storage",
        "notifications",
        "alarms"
    ],
    "background": 
    {
        "service_worker": "background.js"
    },
    "action": 
    {
        "default_icon": 
        {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html",
        "default_title": "Browser Launcher Pro"
    },
    "content_security_policy": 
    {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": 
    {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "key": "",
    "content_scripts": 
    [
        {
            "matches": 
            [
                "<all_urls>"
            ],
            "js": 
            [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": 
    [
        {
            "resources": 
            [
                "license.html",
                "eula.html",
                "license-ui.js",
                "scripts/jquery.min.js",
                "scripts/bootstrap.min.js",
                "scripts/popper.min.js"
            ],
            "matches": 
            [
                "<all_urls>"
            ]
        }
    ],
    "commands": 
    {
        "open-youtube-incognito": 
        {
            "suggested_key": 
            {
                "default": "Ctrl+Shift+Z"
            },
            "description": "Open YouTube search in incognito mode for the selected text"
        },
        "open-youtube-search": 
        {
            "suggested_key": 
            {
                "default": "Ctrl+Y"
            },
            "description": "Open YouTube search for the selected text"
        }
    }
}